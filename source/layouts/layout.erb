<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui" />
    <meta name="HandheldFriendly" content="true" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Petar Petrov - Homepage" %></title>

    <%= stylesheet_link_tag "normalize", "main" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div id="body-wrap">
      <div id="left-side">
        <div class="heading">
          I am Petar, maker of mobile and web apps!
        </div>
        <div class="contact-wrap">
          <div class="contact">
            <div id="twitter-img" class="social-img"><a href="https://twitter.com/peshkira" target="_blank"></a></div>
            <div id="github-img" class="social-img"><a href="https://github.com/peshkira" target="_blank"></a></div>
            <div id="email-img" class="social-img"><a href="mailto:me@petarpetrov.org?subject=Hey There"></a></div>
            <div id="linkedin-img" class="social-img"><a href="https://www.linkedin.com/in/petarepetrov" target="_blank"></a></div>
            <div id="googleplus-img" class="social-img"><a href="https://plus.google.com/108747048852311479056" target="_blank"></a></div>
          </div>
        </div>
      </div>
      <div id="main-content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
