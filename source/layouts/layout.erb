<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui" />
    <meta name="HandheldFriendly" content="true" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Petar Petrov - Homepage" %></title>

    <%= stylesheet_link_tag "normalize", "main" %>
    <%= javascript_include_tag  "all" %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  </head>

  <body class="<%= page_classes %>">
    <div id="body-wrap">
      <div id="left-side">
        <div class="heading">
          I am Petar, maker of mobile and web apps!
        </div>
        <div class="contact-wrap">
          <div class="contact">
            <div id="twitter-img" class="social-img"><a href="https://twitter.com/peshkira" target="_blank"></a></div>
            <div id="github-img" class="social-img"><a href="https://github.com/peshkira" target="_blank"></a></div>
            <div id="email-img" class="social-img"><a href="mailto:me@petarpetrov.org?subject=Hey There"></a></div>
            <div id="linkedin-img" class="social-img"><a href="https://www.linkedin.com/in/petarepetrov" target="_blank"></a></div>
            <div id="googleplus-img" class="social-img"><a href="https://plus.google.com/108747048852311479056" target="_blank"></a></div>
          </div>
        </div>
      </div>
      <div id="main-content">
        <%= yield %>
      </div>
    </div>
    <script>
     $(document).on("page:change", function() {
        window.prevPageYOffset = window.pageYOffset;
        return window.prevPageXOffset = window.pageXOffset;
      });

     $(document).on("page:load", function() {
        return window.scrollTo(window.prevPageXOffset, window.prevPageYOffset);
     });
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-41079051-2', 'petarpetrov.org');
      ga('send', 'pageview');
    </script>
  </body>
</html>
